{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es5",
        "lib": [ "es7", "dom" ]
    },
    "exclude": [
        "node_modules",
        "typings/main",
        "typings/main.d.ts",
        "**/*.spec.ts"
    ]
}
